{
  "name": "moncala",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dayjs": "^1.8.15",
    "dexie": "^2.0.4",
    "draft-js": "^0.11.0",
    "lodash": "^4.17.21",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-scripts": "3.1.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "typesafe-actions": "^4.4.2",
    "typescript": "3.5.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "sonar:local": "sonar-scanner -Dsonar.host.url=http://localhost:9000/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!src/serviceWorker.ts",
      "!src/index.tsx"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "@types/draft-js": "^0.10.34",
    "@types/jest": "24.0.17",
    "@types/lodash": "^4.14.136",
    "@types/node": "12.7.1",
    "@types/react": "^16.9.1",
    "@types/react-dom": "16.8.5",
    "@types/react-redux": "^7.1.1",
    "@types/react-test-renderer": "^16.9.0",
    "@types/uuid": "^3.4.5",
    "react-test-renderer": "^16.9.0",
    "sonar-scanner": "^3.1.0"
  }
}
